RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Защита конфигурационных файлов
<FilesMatch "^(env\.php|composer\.(json|lock))$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Защита директорий
RedirectMatch 403 ^/config/.*$
RedirectMatch 403 ^/core/.*$
RedirectMatch 403 ^/app/.*$

# Настройки PHP (настраиваются через php.ini или конфигурацию виртуального хоста)
# См. инструкцию в DEPLOY.md раздел "Настройка PHP"
